<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.pentaho.hds</groupId>
    <artifactId>pentaho-big-data-bundles</artifactId>
    <version>6.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>pentaho-big-data-assemblies</artifactId>
  <packaging>pom</packaging>

  <!-- Standalone is in separate profile to avoid a circular dependency on Kettle -->

  <profiles>
    <profile>
      <id>featuresOnly</id>
      <activation>
        <property>
          <name>!assemblyOnly</name>
        </property>
      </activation>
      <modules>
        <module>features</module>
      </modules>
    </profile>
    <profile>
      <id>assemblyOnly</id>
      <activation>
        <property>
          <name>!featuresOnly</name>
        </property>
      </activation>
      <modules>
        <module>samples</module>
        <module>pmr-libraries</module>
        <module>legacy-plugin</module>
      </modules>
    </profile>
    <profile>
      <id>standalone</id>
      <modules>
        <module>samples</module>
        <module>features</module>
        <module>pmr-libraries</module>
        <module>legacy-plugin</module>
        <module>standalone</module>
      </modules>
    </profile>
  </profiles>
</project>
